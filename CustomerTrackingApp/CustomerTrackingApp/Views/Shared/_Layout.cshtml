@model BaseViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.PageTitle - TaskApp</title>
    <link rel="stylesheet" href="~/styles/home.css" />
    <script type="text/javascript" src="~/scripts/Http.js"></script>
    <script type="text/javascript" src="~/scripts/Parser.js"></script>
    <script type="text/javascript">
        let page = {};
        function main() { } // base for override
    </script>
</head>
<body onload="main()">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container clearfix">
                <div class="header-container">
                    <ul class="nav-bar-item clearfix">
                        <li class="header-item">
                            <a class="header-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (Model.OnlineUser != null)
                        {
                            <li class="header-item">
                                <a class="header-link" asp-area="" asp-controller="User" asp-action="Users">Users</a>
                            </li>
                            <li class="header-item">
                                <a class="header-link" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
